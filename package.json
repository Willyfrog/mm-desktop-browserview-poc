{
  "name": "desktop_poc",
  "description": "Desktop BrowserView proof of concept",
  "version": "5.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "pack": "yarn compile && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "package:windows": "cross-env NODE_ENV=production electron-builder --win --x64 --ia32 --publish=never"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "bootstrap": "^4.4.1",
    "cross-env": "^7.0.2",
    "electron-context-menu": "^2.0.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "registry-js": "^1.9.0",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "electron": "^8.3.3",
    "electron-builder": "^21.0.11",
    "electron-webpack": "^2.7.4",
    "electron-webpack-eslint": "^5.0.1",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mattermost": "github:mattermost/eslint-plugin-mattermost",
    "eslint-plugin-react": "^7.18.3",
    "react-hot-loader": "^4.12.19",
    "webpack": "~4.35.3"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.config.js"
    },
    "main": {
      "extraEntries": [
        "@/preload.js"
      ]
    }
  },
  "build": {
    "productName": "desktop_poc",
    "appId": "Mattermost.desktop_poc",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    }
  }
}
